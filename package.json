{
  "name": "chzzk-stream-deck",
  "version": "2.0.0",
  "description": "CHZZK Stream Deck - 치지직 스트리밍을 위한 실시간 채팅 위젯 관리 시스템",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "app": "electron .",
    "dev": "nodemon server.js",
    "build": "electron-builder",
    "prebuild:win": "node scripts/kill-electron.js && node scripts/clear-cache.js && rm -rf dist || true",
    "build:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:win:portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable",
    "dist": "electron-builder --publish=never",
    "chat-test": "node test/chzzk-chat-terminal.js",
    "api-test": "node test/chzzk-api-test.js",
    "channel-info": "node test/chzzk-channel-info.js",
    "test": "echo \"치지직 스트림덱 테스트 가이드\" && echo \"\" && echo \"1단계: API 연결 테스트 (필수)\" && echo \"  npm run api-test [채널ID]\" && echo \"\" && echo \"2단계: 채팅 테스트 (API 성공 후)\" && echo \"  npm run chat-test [채널ID]\" && echo \"\" && echo \"3단계: 채널 정보 전체 조회\" && echo \"  npm run channel-info [채널ID]\" && echo \"\" && echo \"예시:\" && echo \"  npm run api-test 789d1d9c5b58c847f9f18c8e5073c580\" && echo \"  npm run channel-info 789d1d9c5b58c847f9f18c8e5073c580\" && echo \"  npm run chat-test 789d1d9c5b58c847f9f18c8e5073c580\" && exit 0"
  },
  "keywords": [
    "obs",
    "chzzk",
    "stream",
    "widget",
    "dashboard"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "socket.io-client": "^4.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "build": {
    "appId": "com.chzzk.streamdeck",
    "productName": "CHZZK Stream Deck",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!test/**/*",
      "!*.md",
      "!*.git*",
      "!build/**/*"
    ],
    "asar": false,
    "extraFiles": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [],
      "signDlls": false,
      "publisherName": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CHZZK Stream Deck"
    }
  }
}
